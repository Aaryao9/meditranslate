{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",            // âœ… CommonJS works best with ts-node
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,         // allows 'import express from "express"'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
